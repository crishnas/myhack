def sum_valid_substrings(filepath):
    with open(filepath, 'r') as file:
        content = file.read()

    total = 0

    n = len(content)
    for i in range(n):
        for length in range(1, 11):  # 1 to 10 digit substrings
            if i + length <= n:
                raw = content[i:i+length]
                clean = raw.lstrip("0") or "0"  # Remove leading zeros, keep "0" if all zeros
                if clean == "0":
                    continue  # Exclude zero
                total += int(clean)

    return total

# Example usage
if __name__ == "__main__":
    input_path = "input.txt"  # Replace with your file path
    result = sum_valid_substrings(input_path)
    print(f"âœ… Total sum: {result}")
