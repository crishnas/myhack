def sum_all_substrings_from_file(file_path: str) -> int:
    total = 0
    with open(file_path, 'r') as f:
        content = f.read()
        digits_only = ''.join(filter(str.isdigit, content))

        n = len(digits_only)
        for i in range(n):
            for l in range(1, min(10, n - i) + 1):
                num_str = digits_only[i:i+l].lstrip("0")
                if num_str:  # skip if it was all zeros
                    total += int(num_str)
    return total

# Example usage
if __name__ == "__main__":
    file_path = "input.txt"  # change to your file name
    total = sum_all_substrings_from_file(file_path)
    print(f"âœ… Total sum from file: {total}")
